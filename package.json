{
  "name": "@kb-labs/core",
  "version": "0.1.0",
  "private": true,
  "description": "Core utilities and system interfaces for KB Labs ecosystem",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "author": {
    "name": "Kirill Baranov",
    "url": "https://github.com/kirill-baranov"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirill-baranov/kb-labs-core.git"
  },
  "bugs": {
    "url": "https://github.com/kirill-baranov/kb-labs-core/issues"
  },
  "homepage": "https://github.com/kirill-baranov/kb-labs-core#readme",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "// ——— core": "────────────────────────────────────────",
    "clean": "rimraf dist",
    "build:js": "tsup --config tsup.config.ts",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "build": "pnpm clean && pnpm build:js && pnpm build:types",
    "build:all": "pnpm -r run build",
    "build:clean": "pnpm -r run clean && pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",

    "// ——— quality": "────────────────────────────────────────",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc -b tsconfig.tools.json",

    "// ——— ci/qa": "────────────────────────────────────────",
    "check": "pnpm lint && pnpm type-check && pnpm test -- --run",
    "ci": "pnpm clean && pnpm build && pnpm check",

    "// ——— cleanup": "────────────────────────────────────────",
    "clean:all": "rimraf node_modules packages/*/node_modules apps/*/node_modules dist"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier -w"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@actions/core": "^1",
    "@actions/github": "^6",
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "2.1.9",
    "better-sqlite3": "^12.2.0",
    "colorette": "^2.0.20",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsonc": "^2.15.1",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-unused-imports": "^4.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.11.0",
  "dependencies": {
    "@kb-labs/core-config": "workspace:*",
    "@kb-labs/core-sys": "workspace:*",
    "zod": "^4.1.5"
  }
}
