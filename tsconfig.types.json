{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "outDir": "./dist",

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "sourceMap": false,

    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@kb-labs/core-config": ["./packages/config/src/index.ts"],
      "@kb-labs/core-sys": ["./packages/sys/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/scripts/**"
  ]
}
