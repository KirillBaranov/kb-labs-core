{
  "extends": "@kb-labs/devkit/tsconfig/node.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@kb-labs/core-config": [
        "./packages/config/src/index.ts"
      ],
      "@kb-labs/core-sys": [
        "./packages/sys/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/scripts/**"
  ]
}