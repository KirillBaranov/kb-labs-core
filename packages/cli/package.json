{
  "name": "@kb-labs/core-cli",
  "version": "0.1.0",
  "type": "module",
  "description": "CLI commands for KB Labs core configuration system",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "kb": {
    "commandsManifest": "./dist/cli.manifest.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run -c ../../vitest.config.ts",
    "test:watch": "vitest -c ../../vitest.config.ts",
    "lint": "eslint . --ignore-pattern 'dist/**'",
    "lint:fix": "eslint . --fix --ignore-pattern 'dist/**'"
  },
  "dependencies": {
    "@kb-labs/core-bundle": "workspace:*",
    "@kb-labs/core-config": "workspace:*",
    "@kb-labs/core-policy": "workspace:*",
    "@kb-labs/core-profiles": "workspace:*",
    "@kb-labs/shared-cli-ui": "link:../../../kb-labs-shared/packages/cli-ui",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}

