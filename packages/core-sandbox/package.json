{
  "name": "@kb-labs/core-sandbox",
  "version": "0.1.5",
  "description": "Universal sandbox isolation for CLI and REST API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ignore-pattern 'dist/**'",
    "lint:fix": "eslint . --fix --ignore-pattern 'dist/**'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@kb-labs/core-runtime": "workspace:*",
    "@kb-labs/core-sys": "workspace:*",
    "@kb-labs/shared-cli-ui": "workspace:*",
    "execa": "^8.0.0"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
