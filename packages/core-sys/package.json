{
  "name": "@kb-labs/core-sys",
  "version": "0.1.5",
  "description": "Core system utilities for KB Labs, including file system operations and path resolution",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./logging": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./output": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint . --ignore-pattern 'dist/**' --ignore-pattern 'coverage/**'",
    "lint:fix": "eslint . --fix --ignore-pattern 'dist/**' --ignore-pattern 'coverage/**'"
  },
  "dependencies": {
    "@kb-labs/shared-cli-ui": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
