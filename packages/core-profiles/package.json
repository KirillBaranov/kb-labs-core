{
  "name": "@kb-labs/core-profiles",
  "version": "0.1.0",
  "description": "Profiles v2 system for KB Labs, providing environment-based configuration profiles with scopes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run -c ../../vitest.config.ts",
    "lint": "eslint . --ignore-pattern 'dist/**' --ignore-pattern 'eslint.config.js' --ignore-pattern 'tsup.config.ts' --ignore-pattern 'vitest.config.ts'",
    "lint:fix": "eslint . --fix --ignore-pattern 'dist/**' --ignore-pattern 'eslint.config.js' --ignore-pattern 'tsup.config.ts' --ignore-pattern 'vitest.config.ts'"
  },
  "dependencies": {
    "@kb-labs/core-config": "link:../core-config",
    "@kb-labs/core-sys": "link:../core-sys",
    "ajv": "^8.17.1",
    "glob": "^11.0.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/picomatch": "^4",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
