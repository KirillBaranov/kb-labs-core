{
  "name": "@kb-labs/core-cli-adapters",
  "version": "0.1.0",
  "type": "module",
  "description": "CLI adapter layer extracted from kb-labs-cli",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run"
  },
  "dependencies": {
    "@kb-labs/plugin-manifest": "link:../../../kb-labs-plugin/packages/manifest",
    "@kb-labs/plugin-adapter-cli": "link:../../../kb-labs-plugin/packages/adapters/cli",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "picomatch": "^4.0.2",
    "yaml": "^2.8.0",
    "@kb-labs/core-cli": "workspace:*"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "@types/picomatch": "^4",
    "cpy-cli": "^4.2.0",
    "rimraf": "^6.0.1"
  }
}